# ============================================
# PROTECT SENSITIVE FILES
# ============================================

# Deny access to configuration files
<FilesMatch "^(config\.php|\.env|\.env\..*|composer\.json|composer\.lock|package\.json)$">
    Require all denied
</FilesMatch>

# Deny access to backup files
<FilesMatch "\.(sql|zip|tar|gz|bak|old|tmp)$">
    Require all denied
</FilesMatch>

# Protect .htaccess and .htpasswd
<FilesMatch "^\.ht">
    Require all denied
</FilesMatch>

# Deny access to git files
<FilesMatch "^\.git">
    Require all denied
</FilesMatch>

# ============================================
# DIRECTORY PROTECTION (using FilesMatch instead of Directory)
# ============================================

# Disable directory browsing
Options -Indexes

# Protect PHP files in sensitive directories using URL rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Block direct access to PHP files in backups directory
    RewriteRule ^backups/.*\.php$ - [F,L]

    # Block direct access to PHP files in includes directory (except allowed ones)
    RewriteRule ^includes/(?!config\.php|db\.php|security\.php|email\.php|sms_service\.php|payment_gateway\.php|qrcode_service\.php|analytics\.php|backup_service\.php|header\.php|footer\.php|email_templates/).*\.php$ - [F,L]

    # Block direct access to PHP files in logs directory
    RewriteRule ^logs/.*\.php$ - [F,L]

    # Block PHP execution in uploads directory
    RewriteRule ^uploads/.*\.php$ - [F,L]
</IfModule>

# ============================================
# PHP SECURITY SETTINGS (for mod_php)
# ============================================

<IfModule mod_php.c>
    # Error handling
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log logs/error.log

    # Session security
    php_value session.cookie_httponly 1
    php_value session.use_only_cookies 1

    # Upload limits
    php_value upload_max_filesize 5M
    php_value post_max_size 6M
    php_value max_execution_time 30
    php_value max_input_time 30
</IfModule>

# ============================================
# COMPRESSION
# ============================================

<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ============================================
# CACHING
# ============================================

<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"

    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"

    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# ============================================
# ERROR PAGES
# ============================================

ErrorDocument 403 /error_403.php
ErrorDocument 404 /error_404.php
ErrorDocument 500 /error_500.php

# ============================================
# RATE LIMITING (if mod_ratelimit available)
# ============================================

<IfModule mod_ratelimit.c>
    <Location /api/>
        SetOutputFilter RATE_LIMIT
        SetEnv rate-limit 400
    </Location>
</IfModule>
